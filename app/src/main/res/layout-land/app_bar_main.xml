<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yef.gwalior.aks.com.yef.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/accountpic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:scaleType="centerCrop"
        android:onClick="profileopenfrompic"
        android:src="@drawable/yef_icon_short">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="80dp"
        android:onClick="profileopenfrompic"
        android:text="User"

        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

   </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="false"
        fab:menu_fab_label="Cancel"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_animationDelayPerItem="0"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="#00C29F"
        fab:menu_colorRipple="#00C29F"
        android:padding="8dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/appiconfab"
            app:fab_colorNormal="#FFFFFF"
            fab:fab_size="mini"
            fab:fab_label="Visit our website"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phoneicon_white"
            app:fab_colorNormal="#FFFFFF"
            fab:fab_size="mini"
            fab:fab_label="Call Us"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabGmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gmail_icon"
            app:fab_colorNormal="#FFFFFF"
            fab:fab_size="mini"
            fab:fab_label="Mail Us"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabGMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gmap_icon"
            app:fab_colorNormal="#FFFFFF"
            fab:fab_size="mini"
            fab:fab_label="Our Address\n74, Masoodpur Dairy, Vasant Kunj, New Delhi â€“ 110070"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabWhatsAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whatap_icon"
            app:fab_colorNormal="#FFFFFF"
            fab:fab_size="mini"
            fab:fab_label="Chat With Us"/>

          </com.github.clans.fab.FloatingActionMenu>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:elevation="12dp"
        android:padding="1dp"
        android:textAlignment="center"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:fontFamily="sans-serif-condensed"
                android:text="YEF"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />
               <ImageView
                  android:layout_width="25dp"
                  android:src="@drawable/appdeveloper1"
                   android:scaleType="centerCrop"
                  android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif-condensed"
                android:text="AkS"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="15sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
